//from while loop

#include <stdio.h>
int main()
{
    // sum of the digits
    int num = 123, rem,ori=num,rev = 0;
  
while(num!=0){
rem = num % 10;
        rev = rev * 10 + rem;
        num /= 10;
}

printf(" the reverse of %d is %d ", ori, rev);

    return 0;
}

