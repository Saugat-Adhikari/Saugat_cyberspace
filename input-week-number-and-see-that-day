
#include <stdio.h>
 int main()
{
      // enter a number and get the day of the respected week.
 
     int num;
     char *week [10]= {"sunday","monday","tuesday","wednesday","thursday","friday","saturday"};  // pointer use garako
     printf(" Enter the number of week : ");
     scanf("%d",&num);
     if(num>7)
     {
         printf(" invalid number of the week. ");
     }else
     {
         printf(" the %d day of the week is %s ",num,week[num-1]); // array ko index 0 bata suru huda user lay 7 input dida array ko 6 element dekhauxa so, week[num-1]
     }

    return 0;
}
